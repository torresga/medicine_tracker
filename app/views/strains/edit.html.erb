<%= form_with(model: @strain, local: true, url: user_strain_path) do |form| %>
<fieldgroup>
  <div class="mb-3">
    <%= form.label :name %>
    <%= form.text_field :name %>
  </div>

  <div class="mb-3">
    <%= form.label :brand %>
    <%= form.select :brand, ["Agri-Kind", "Bank", "Calypso", "Cresco",
                            "Dr. Solomon's", "FarmaceuticalRx",
                            "gLeaf", "GPEN", "Grassroots", "Ilera",
                            "Kind Tree", "Liberty",
                            "Moxie", "Nira+", "Prime Wellness", "Prism",
                            "Rythm", "Select", "Standard Farms", "Supply", "Terrapin", "The Lab", "Vireo"] %>
  </div>

  <div class="mb-3">
    <%= form.label :strain_type %>
    <%= form.select :strain_type, ["Sativa", "Indica", "Hybrid"] %>
  </div>

  <div class="mb-3">
    <%= form.label :form %>
    <%= form.select :form, ["Flower", "Capsule", "Tincture",
                            "Cartridge", "Live Resin", "Wax",
                            "Rick Simpson Oil", "Diamonds/Crystals", "Shatter", "Syringe", "Isolate", "Rosin",
                            "Sauce", "Topical"] %>
  </div>

  <div class="mb-3">
    <%= form.label :notes %>
    <%= form.text_area :notes %>
  </div>
</fieldgroup>

<%= form.submit "Update strain" %>
<% end %>
